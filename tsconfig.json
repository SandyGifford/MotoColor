{
	"compilerOptions": {
		"target": "es2018",
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"@typings/*": [
				"./src/typings/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@components/*": [
				"./src/components/*"
			]
		}
	}
}